  <log4net>
    <appender name="RollingFile_Debug" type="log4net.Appender.RollingFileAppender">
      <file value="logs/log-debug.txt" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%5p [%d] - %m%n" />
      </layout>
    </appender>
      <appender name="RollingFile_Error" type="log4net.Appender.RollingFileAppender">
          <file value="logs/log-error.txt" />
          <appendToFile value="true" />
          <maximumFileSize value="100KB" />
          <maxSizeRollBackups value="10" />
          <layout type="log4net.Layout.PatternLayout">
              <param name="ConversionPattern" value="%5p [%d] - %m%n" />
          </layout>
          <filter type="log4net.Filter.LevelRangeFilter">
              <levelMin value="ERROR" />
              <levelMax value="FATAL" />
          </filter>
      </appender>
      <root>
          <level value="DEBUG" />
          <appender-ref ref="RollingFile_Debug" />
          <appender-ref ref="RollingFile_Error"/>
      </root>
  </log4net>
