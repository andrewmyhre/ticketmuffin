@using System.Diagnostics
@using System.Reflection
@using TicketMuffin.Web.Code
<!DOCTYPE HTML>

<html>
  <head>
  <link type="text/css" href="/content/jquery-ui-1.8.16.custom.css" rel="stylesheet" />	
  <link rel="stylesheet" type="text/css" href="/content/style.css" />
    <script src="@Url.Content("https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/global.js")?@DateTime.Now.ToString("yyyyddMMhhmmss")" type="text/javascript"></script>
    @RenderSection("css", false)
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <title>@ViewBag.Title</title>
  @RenderSection("scripts", false)
  <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-31909232-1']);
      _gaq.push(['_trackPageview']);

      (function () {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  </script>
  @if (!string.IsNullOrWhiteSpace(ViewContext.RequestContext.HttpContext.Request.QueryString["editmode"]))
  {
      <script type="text/javascript" src="/Scripts/content-editing.js"></script>
  }
  </head>
  <body>

  @RenderSection("infobox", false)

    <div id="mainArea">

      <div id="topArea">
        <a href="@Url.Action("Index", "Home")" id="logo"><img src="/content/img/logo.png" /></a>
        <!--<a href="/" id="fbconnect"><img src="/content/img/fbconnect.png" /></a>-->
          <div id="loginArea">
            @Html.Partial("_LogOnPartial")
            @Html.Partial("SwitchCulture")
          </div>
      </div>
        

      @RenderBody()
      
    </div>
    <div id="footerArea">
        <div id="footerAreaInner">
            <div class="left">@Html.Content("Copyright © 2011 <a href=\" / \">ticketmuffin</a>. All Rights Reserved.")</div>
            <div class="right">
                @Html.ActionLink(Html.Content("Contact Us", "Layout").ToString(), "Contact", "About")&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                @Html.ActionLink(Html.Content("Privacy Policy", "Layout").ToString(), "Privacy", "About")&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                @Html.ActionLink(Html.Content("Terms and Conditions", "Layout").ToString(), "TermsAndConditions", "About")
            </div>
        </div>
        <br/>v@(FileVersionInfo.GetVersionInfo(Assembly.GetAssembly(typeof(TicketMuffin.Web.MvcApplication)).Location).FileVersion)
    </div>

  </body>
</html>
