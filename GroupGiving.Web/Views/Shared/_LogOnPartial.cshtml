@if(Request.IsAuthenticated) {
    <text>Welcome back! [ @Html.ActionLink("Account", "Index", "Account") ]
    [ @Html.ActionLink("SIGN OUT", "SignOut", "Account") ]</text>
}
else {
    @:[ <a href="#" id="showSignIn">SIGN IN</a> ]
    @:[ @Html.ActionLink("SIGN UP", "signup", "Account") ]

    <div id="popup-signIn" style="display:none;">
        <form id="signin" action="@Url.Action("signin", "account")">
            <label for="emailaddress">Username: </label><input type="text" name="emailaddress" /><br />
            <label for="password">Password: </label><input type="password" name="password" /><br />
            <input type="hidden" name="returnurl" value="@(Request.QueryString["returnUrl"] ?? Request.Url.PathAndQuery)" />
            <span id="invalidCredentials" class="field-validation-error" style="display:none;">We couldn't find an account matching those credentials</span>
            <a href="#" class="hide">cancel</a>
            <input type="submit" value="Sign In" />
        </form>
        
    </div>
    
}
