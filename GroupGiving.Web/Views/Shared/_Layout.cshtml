<!DOCTYPE HTML>
<html>
  <head>
  <link type="text/css" href="/content/jquery-ui-1.8.16.custom.css" rel="stylesheet" />	
  <link rel="stylesheet" type="text/css" href="/content/style.css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/global.js")" type="text/javascript"></script>
    @RenderSection("css", false)
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <title>@ViewBag.Title</title>
  @RenderSection("scripts", false)
  <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-24742926-1']);
      _gaq.push(['_trackPageview']);

      (function () {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  </script>
  @if (!string.IsNullOrWhiteSpace(ViewContext.RequestContext.HttpContext.Request.QueryString["editmode"]))
  {
      <script type="text/javascript" src="/Scripts/content-editing.js"></script>
  }
  </head>
  <body>

  @RenderSection("infobox", false)

    <div id="mainArea">

      <div id="topArea">
        <a href="@Url.Action("Index", "Home")" id="logo"><img src="/content/img/logo.png" /></a>
        <!--<a href="/" id="fbconnect"><img src="/content/img/fbconnect.png" /></a>-->
          <div id="loginArea">
            @Html.Partial("_LogOnPartial")
            @Html.Partial("SwitchCulture")
          </div>
      </div>
        

      @RenderBody()
      
    </div>
    <div id="footerArea">
      <div id="footerAreaInner">
        <div class="left">Copyright © 2011 <a href="/">ticketmuffin</a>. All Rights Reserved.</div>
        <div class="right">
          <a href="">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;

          <a href="">Privacy Policy</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
          <a href="">Terms and Conditions</a>
        </div>
      </div>
    </div>

  </body>
</html>
