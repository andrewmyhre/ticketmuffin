@using GroupGiving.Web.Code
@model GroupGiving.Web.Models.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

@section scripts {
<script type="text/javascript" src="/scripts/jquery.expander.js"></script>
<script type="text/javascript" src="/scripts/home.js"></script>
}

@Html.ActionLink("Buy Ticket", "Index", "Order")

<h2>Upcoming Events in London</h2>

@foreach(var e in Model.Events)
{
    @Html.ActionLink(e.Name, "Index", "Event", new { id = e.Id }, null) @e.City <text>20 June, 2011</text>
    <p class="expandable">@Html.FakeLatinParagraph()</p>
}


