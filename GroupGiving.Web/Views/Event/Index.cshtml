</div>
              <strong>@Model.Venue</strong><br />
              @Model.AddressLine<br />
              @Model.PostCode @Model.City<br />
              @Model.Country
            </div>
          </div>
          <div class="eventBox">
            <div class="eventBoxTop">Organiser</div>

            <div class="eventBoxBottom">
              <strong>@Model.ContactName</strong><br /><br />   
              <input type="submit" class="smallButton" value="Contact" />
            </div>
          </div>
          <input type="submit" class="blueButton" value="Make your own event" />
        </div>                                    
        <div id="eventRight">
          <div id="eventDesc">
            <p>@Html.Raw(Model.Description)</p>
            <p>@Model.AdditionalBenefits</p>
            <div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:comments href="ticketmuffin.com/events/seedcamp-dinner" num_posts="1" width="680"></fb:comments>            
          </div>
        </div>

        <div class="clearFix"></div>  
      </div>